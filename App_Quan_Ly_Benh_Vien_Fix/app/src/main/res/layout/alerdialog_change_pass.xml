<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thay đổi mật khẩu"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                tools:ignore="ContentDescription">
            </ImageView>
            <EditText
                android:id="@+id/edtInputUserName_changepass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/shape_text_stroke_bottom"
                >
            </EditText>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_gmail"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                tools:ignore="ContentDescription">
            </ImageView>
            <EditText
                android:id="@+id/edtInputUserGmail_changepass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/shape_text_stroke_bottom"
                >
            </EditText>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_resetpass"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                tools:ignore="ContentDescription">
            </ImageView>

            <EditText
                android:id="@+id/edtGetCode_changepass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:hint="Nhập vào mã vừa nhận"
                android:layout_marginEnd="5dp"
                android:background="@drawable/shape_text_stroke_bottom">

            </EditText>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:src="@drawable/icon_pasword2"
                tools:ignore="ContentDescription">

            </ImageView>
            <EditText
                android:id="@+id/edtInputNewPass_changepass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:inputType="textPassword"
                android:hint="Nhập mật khẩu mới"
                android:layout_marginEnd="5dp"
                android:background="@drawable/shape_text_stroke_bottom"
                tools:ignore="HardcodedText">
            </EditText>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmChangePass2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/design_button2"
        android:text="Thay mật khẩu" />


</LinearLayout>