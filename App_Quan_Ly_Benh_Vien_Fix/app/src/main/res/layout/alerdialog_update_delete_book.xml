<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"


    android:layout_height="wrap_content">

   <LinearLayout
       android:id="@+id/tableUpdateInfo"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_marginTop="10dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"

       android:background="#C5C3C3"
       android:layout_height="wrap_content"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="25sp"
           android:layout_gravity="center"
           android:layout_marginTop="5dp"
           android:text="Cập nhật thông tin"
           tools:ignore="HardcodedText" />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <ImageView
                   android:layout_width="42dp"
                   android:layout_height="42dp"
                   android:layout_gravity="center"
                   android:src="@drawable/img"
                   android:layout_marginStart="10dp"
                   >
               </ImageView>
               <EditText
                   android:id="@+id/edtInPutPatientNameUpdate"
                   android:layout_width="match_parent"
                   android:layout_height="55dp"
                   android:layout_marginStart="5dp"
                   android:inputType="text"
                   android:textSize="15sp"
                   android:hint="Họ và tên"
                   android:background="@drawable/shape_text_stroke_bottom"

                   tools:ignore="HardcodedText">
               </EditText>
           </LinearLayout>
       </com.google.android.material.textfield.TextInputLayout>



       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <ImageView
                   android:layout_width="42dp"
                   android:layout_height="42dp"
                   android:layout_gravity="center"
                   android:src="@drawable/icon_mini_numberphone"
                   android:layout_marginStart="10dp"
                   >
               </ImageView>
               <EditText
                   android:id="@+id/edtInPutPatientPhoneUpdate"
                   android:layout_width="match_parent"
                   android:layout_height="55dp"
                   android:layout_marginStart="5dp"
                   android:inputType="number"
                   android:hint="Số điện thoại"
                   android:background="@drawable/shape_text_stroke_bottom"
                   tools:ignore="HardcodedText,TextFields">
               </EditText>
           </LinearLayout>
       </com.google.android.material.textfield.TextInputLayout>



       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <ImageView
                   android:layout_width="42dp"
                   android:layout_height="42dp"
                   android:layout_gravity="center"
                   android:src="@drawable/icon_gmail"
                   android:layout_marginStart="10dp"
                   >
               </ImageView>

               <EditText
                   android:id="@+id/edtInputPatientGmailUpdate"
                   android:layout_width="match_parent"
                   android:layout_height="55dp"
                   android:layout_marginStart="5dp"
                   android:background="@drawable/shape_text_stroke_bottom"
                   android:hint="Gmail"
                   tools:ignore="HardcodedText">

               </EditText>
           </LinearLayout>
       </com.google.android.material.textfield.TextInputLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_gravity="center"
           android:orientation="horizontal">
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btnPickDateBookUpdate"
               android:layout_width="wrap_content"
               android:layout_gravity="center"
               android:layout_height="42dp"
               android:background="@drawable/design_button3"
               android:text="Date"
               tools:ignore="HardcodedText"
               />

           <TextView
               android:id="@+id/txtShowDateBookUpdate"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:gravity="center"
               android:layout_marginStart="20dp"
               android:paddingStart="5dp"
               android:background="@drawable/shape_text_stroke_bottom"
               android:textSize="20sp"
               android:text="00/00/0000"
               tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_gravity="center"
           android:orientation="horizontal">
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btnPickTimeBookUpdate"
               android:layout_width="wrap_content"
               android:layout_gravity="center"
               android:layout_height="42dp"
               android:background="@drawable/design_button3"
               android:text="Time"
               tools:ignore="HardcodedText"
               />

           <TextView
               android:id="@+id/txtShowTimeBookUpdate"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:gravity="center"
               android:layout_marginStart="20dp"
               android:paddingStart="5dp"
               android:background="@drawable/shape_text_stroke_bottom"
               android:textSize="20sp"
               android:text="00:00"
               tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
               />
       </LinearLayout>



   </LinearLayout>


    <TextView
        android:id="@+id/txtDoYouWant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Bạn muốn ?"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStartUpdate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/design_button2"
            android:text="Cập nhật"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteBookAndConfirmUpdate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/design_button2"
            android:text="Xóa lịch hẹn"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>