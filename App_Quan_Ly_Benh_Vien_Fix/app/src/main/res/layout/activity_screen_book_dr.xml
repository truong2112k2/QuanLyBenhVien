<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".ScreenBookDr">


    <TextView
        android:layout_width="wrap_content"
        android:textSize="35sp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Đặt Lịch Khám"
        tools:ignore="HardcodedText" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
          <ImageView
              android:layout_width="42dp"
              android:layout_height="42dp"
              android:layout_gravity="center"
              android:src="@drawable/img"
              android:layout_marginStart="10dp"
              >
          </ImageView>
            <EditText
                android:id="@+id/edtInPutPatientName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:inputType="text"
                android:textSize="15sp"
                android:hint="Họ và tên"
                android:background="@drawable/shape_text_stroke_bottom"

                tools:ignore="HardcodedText">
            </EditText>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_mini_numberphone"
                android:layout_marginStart="10dp"
                >
            </ImageView>
            <EditText
                android:id="@+id/edtInPutPatientPhone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:inputType="number"
                android:hint="Số điện thoại"
                android:background="@drawable/shape_text_stroke_bottom"
                tools:ignore="HardcodedText,TextFields">
            </EditText>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_gmail"
                android:layout_marginStart="10dp"
                >
            </ImageView>

            <EditText
                android:id="@+id/edtInputPatientGmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_text_stroke_bottom"
                android:hint="Gmail"
                tools:ignore="HardcodedText">

            </EditText>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPickDateBook"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="42dp"
            android:background="@drawable/design_button3"
            android:text="Date"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:id="@+id/txtShowDateBook"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:paddingStart="5dp"
            android:background="@drawable/shape_text_stroke_bottom"
            android:textSize="20sp"
            android:text="00/00/0000"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPickTimeBook"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="42dp"
            android:background="@drawable/design_button3"
            android:text="Time"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:id="@+id/txtShowTimeBook"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:paddingStart="5dp"
            android:background="@drawable/shape_text_stroke_bottom"
            android:textSize="20sp"
            android:text="00:00"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComfimBook"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Xác nhận"
        android:background="@drawable/design_button2"
        tools:ignore="HardcodedText">
    </androidx.appcompat.widget.AppCompatButton>




</LinearLayout>