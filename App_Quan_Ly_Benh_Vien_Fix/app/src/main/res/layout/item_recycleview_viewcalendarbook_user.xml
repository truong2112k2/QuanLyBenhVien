<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#92F1CF"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="100dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgDrScreenShowCalendar"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginTop="10dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="85sp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/txtShowNameDrScreenShowCalendar"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:text="Name doctor"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="1.5dp"
            android:background="#8E8484"
            >
        </LinearLayout>
        <TextView
            android:id="@+id/txtShowDateScreenShowCalendar"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Date"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="1.5dp"
            android:background="#8E8484"
            >
        </LinearLayout>
        <TextView
            android:id="@+id/txtShowTimeScreenShowCalendar"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Time"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </LinearLayout>



</androidx.cardview.widget.CardView>